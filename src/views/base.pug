doctype html
html(lang="ko")
    head
        title #{pageTitle} | Wetube
        link(rel="stylesheet" href="http://unpkg.com/mvp.css")
    body
        header 
            h1=pageTitle 
            nav 
                ul 
                    li 
                        a(href="/") Home
                    if(loggedIn)
                        li
                            a(href="/logout") Log Out
                    else 
                        li 
                            a(href="/join") Join
                        li 
                            a(href="/login") Login
                    li 
                        a(href="/search") Search
                    li 
                        a(href="/videos/upload") Upload Video
        main 
            block content
    footer 
        include partials/footer.pug